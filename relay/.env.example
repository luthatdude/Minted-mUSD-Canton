# ============================================================
# Minted Relay — Environment Configuration
# Copy to .env.development (local) or set in deployment env.
# ============================================================

# Canton connection
CANTON_HOST=localhost
CANTON_PORT=7575
CANTON_TOKEN=<your-canton-token>
CANTON_PARTY=<operator-party-id>

# Canton package ID — 64-char hex hash of the deployed DAR
# Find via: curl <canton-host>:7575/v2/packages | jq '.packageIds[]'
CANTON_PACKAGE_ID=<64-char-hex-package-id>

# Ethereum RPC (HTTPS required in production)
ETHEREUM_RPC_URL=<your-rpc-url>

# Bridge contract address
BRIDGE_CONTRACT_ADDRESS=<bridge-address>

# mUSD token address (for Canton redemption payouts)
MUSD_TOKEN_ADDRESS=<musd-address>

# Health server
HEALTH_PORT=18080
HEALTH_BIND_HOST=127.0.0.1

# Package ID verification (default: true — fail startup if package not on ledger)
RELAY_STRICT_PACKAGE_CHECK=true
RELAY_PACKAGE_CHECK_INTERVAL_CYCLES=60
